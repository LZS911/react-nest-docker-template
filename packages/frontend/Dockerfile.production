FROM lzs911/pnpm:8.3.1-node16.16
WORKDIR /app
COPY package.json .
COPY ./pnpm-lock.yaml ./

RUN pnpm fetch --prod

COPY . .
RUN pnpm install -r --offline --pord
RUN pnpm build
FROM nginx:alpine
COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/build /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]